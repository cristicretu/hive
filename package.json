{
  "name": "hive-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --cwd packages/cli dev",
    "dev:web": "bun run --cwd apps/web dev",
    "build": "bun run --cwd packages/cli build",
    "build:web": "bun run --cwd apps/web build",
    "hive": "bun packages/cli/dist/index.js"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  }
}